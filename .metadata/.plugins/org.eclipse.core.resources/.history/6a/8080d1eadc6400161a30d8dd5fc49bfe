<script>
	
	function fn1() {
		//$('#switch').prop('checked',true).flipswitch('refresh')
		a = $('#switch').prop('checked')
		if(a)
			alert("on..")
		else
			alert("off..")
	}


	nCnt = 0;
	function fn() {
		myIn = setInterval(sFn,1000)
	}
	
	function sFn() {
		nCnt+=10
		$('#points').val(nCnt.toString()).slider('refresh')
		if(nCnt == 100)
			clearInterval(myIn)
	}
</script>


  
