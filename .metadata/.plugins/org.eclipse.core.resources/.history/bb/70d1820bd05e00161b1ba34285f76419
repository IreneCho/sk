<script>
function insert() { 
	xmlHttp = new XMLHttpRequest() //비동기 호출
	myurl = "db2.jsp?myname="+na.value+"&myage="+ag.value+"&mybirth="+bir.value
	xmlHttp.open("GET", myurl, true) 
	xmlHttp.setRequestHeader("Content-Type", "application/x-www-form-urlencoded") //비동기 요청이란 것 표시해준 거으로 꼭 필요
	xmlHttp.send() 
}

function view() { 
	xmlHttp = new XMLHttpRequest() //비동기 호출
	xmlHttp.onreadystatechange = on_ready //이벤트 함수
	myurl = "db1.jsp"
	xmlHttp.open("GET", myurl, true) 
	xmlHttp.setRequestHeader("Content-Type", "application/x-www-form-urlencoded") //비동기 요청이란 것 표시해준 거으로 꼭 필요
	xmlHttp.send() 
}
function on_ready(){ 
	if(xmlHttp.readyState == 4){ //수신이 정상적으로 진행됬다는 표시
		if(xmlHttp.status == 200){ 
			rcv = xmlHttp.responseText.trim()
			toMyJson(rcv)
		}
	}
}
length=0;
function toMyJson(rcv) {
	myj = JSON.parse(rcv)
	for(i=1; i<length; i++){
		mytable.deleteRow(1)
	}
			
	 for(n in myj){
		 
	   myrow = mytable.insertRow()
	   cell1 = myrow.insertCell()
	   cell2 = myrow.insertCell()
	   cell3 = myrow.insertCell()
	   		  
	   cell1.innerText = myj[n].name
	   cell2.innerText = myj[n].age
	   cell3.innerText = myj[n].birth
	   
	   }
	 length = mytable.rows.length; //테이블  길이만큼 저장
	
	
}


</script>

</head>
<body>
 <header><h1>주소록 관리</h1></header>
 
 <section>
 

