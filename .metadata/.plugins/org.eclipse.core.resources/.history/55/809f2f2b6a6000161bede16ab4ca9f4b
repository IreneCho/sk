<script src="https://code.jquery.com/jquery-3.1.0.js" integrity="sha256-slogkvB1K3VOkzAI8QITxV3VzpOnkeNVsKvtkYLMjfk=" crossorigin="anonymous"></script>
<script>
	function order() {

		myname = $('[type="text"]').val()
		myphone = $('[type="number"]').val()
		mymail = $('[type="email"]').val()
		mysize = $('[name="size"]:checked').val()
		
		arr = []
		n = 0;
		$('[name="topping"]:checked').each(chFn) //상태에 해당되는것이 무언가 여러개다 하면 대부분 each쓰면 됨
		function chFn(n,v) { 
			arr[n] = $(v).val()
			n++
		}
	
		mytime = $('[type="time"]').val()
		myplz = $('#order').val()

		$('#view').val("고객명:" + myname + "\n" +
				"전화번호:" + myphone+ "\n" +
				"E-mail:" + mymail + "\n" +
				"피자 사이즈:" + mysize + "\n" +
				"희망배송시간:" + mytime + "\n" +
				"토핑:" + arr + "\n" +
				"배송시요청사항:" + myplz)	
	
	}
		

	
	function fn1() { //append
		myh1 = document.querySelector('h1')  
		mydiv = document.createElement('div')
		mydiv.innerText = "hello"
		myh1.appendChild(mydiv)
	}
		
		
		
		
</script>

