	function fn(){
		my = setInterval( wan, 1000 )
	}
	nCnt = 0	
	function wan(){

		if( nCnt == 2){
			nCnt = 0
			$(".mydiv").animate({"left":"+=5px"}, "slow");}
		/* else if(){
			$("#mydiv").animate({"left":"+=5px"}, "slow");} */
		
		nCnt++
	}
	
	function fn1(){
		clearInterval(my)	
	}
	
